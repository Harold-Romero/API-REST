package com.haromerop.crudApi.ApiRestCrud.dto;

import javax.validation.constraints.NotEmpty;
import javax.validation.constraints.Pattern;

import org.hibernate.validator.constraints.Length;

import io.swagger.annotations.ApiModelProperty;
import lombok.Data;

@Data
public class UserLoginRequest {
	
	@ApiModelProperty(notes = "{userLogin.entity.firstname.apimodelproperty}", name="nombre", required=true, value="{userLogin.entity.firstname.apimodelproperty}")
    @NotEmpty(message = "{userLogin.entity.firstname.empty}")
    @Length(min = 3, max = 15, message = "{userLogin.entity.firstname.length}")
    @Pattern(regexp = "[A-Za-z]+", message = "{userLogin.entity.firstname.pattern}")
	private String user;
	private String pass;
	private String rol;
	
}
